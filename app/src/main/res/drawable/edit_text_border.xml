<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--the outline box turns to blue when the edit text is in focus-->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="@color/blue" />
        </shape>
    </item>

    <!--the outline box turns to grey when the edit text is out of focus-->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lighter_gray" />
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="@color/light_gray" />
        </shape>
    </item>

</selector>

