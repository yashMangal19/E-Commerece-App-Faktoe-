<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:isScrollContainer="false"
    android:elevation="2dp"
    android:background="@drawable/bottom_sheet_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:elevation="4dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/criteria_cf_bold"
                android:text="Category/s"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:id="@+id/bottom_bar_category_newProduct_dialog"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/shop_onboard_signup_background" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EditText_Select_Category_Layout_dialog"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text_border"
            android:paddingStart="24dp"
            android:paddingTop="6dp"
            android:textColorHint="@color/gray"
            android:theme="@style/Theme.FAKTOESHOP_material"
            app:hintTextColor="@color/blue"
            tools:ignore="RtlSymmetry">

            <AutoCompleteTextView
                android:id="@+id/EditText_Select_Category_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0fff"
                android:fontFamily="@font/manjorant_regular"
                android:hint="Select Category"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/gray"
                android:textSize="19sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/criteria_cf_bold"
                android:text="Product Image"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:id="@+id/bottom_bar_product_image_dialog"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/shop_onboard_signup_background" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/CardView_SelectProductImage_dialog"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="24dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/ImageView_ProductImage_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@drawable/edit_text_border"/>
            <ImageView
                android:id="@+id/ImageView_NewImage_dialog"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_camera"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/criteria_cf_bold"
                android:text="General"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:id="@+id/bottom_bar_general_newProduct_dialog"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/shop_onboard_signup_background" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EditText_productName_Layout_dialog"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text_border"
            android:paddingStart="24dp"
            android:paddingTop="6dp"
            android:textColorHint="@color/gray"
            app:hintTextColor="@color/blue"
            tools:ignore="RtlSymmetry">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_productName_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/manjorant_regular"
                android:hint="Product name"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="19sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EditText_productDescription_Layout_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text_border"
            android:paddingStart="24dp"
            android:paddingTop="6dp"
            android:textColorHint="@color/gray"
            app:hintTextColor="@color/blue"
            tools:ignore="RtlSymmetry">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_productDescription_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/manjorant_regular"
                android:lineSpacingExtra="4dp"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="19sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EditText_productBrand_Layout_dialog"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text_border"
            android:paddingStart="24dp"
            android:paddingTop="6dp"
            android:textColorHint="@color/gray"
            app:hintTextColor="@color/blue"
            tools:ignore="RtlSymmetry">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_productBrand_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/manjorant_regular"
                android:hint="Brand name (Optional)"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="19sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EditText_productMRP_Layout_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text_border"
            android:paddingStart="24dp"
            android:paddingTop="6dp"
            android:textColorHint="@color/gray"
            app:hintTextColor="@color/blue"
            tools:ignore="RtlSymmetry">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_productMRP_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/manjorant_regular"
                android:lineSpacingExtra="4dp"
                android:hint="MRP"
                android:inputType="number"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="19sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EditText_productSP_Layout_dialog"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text_border"
            android:paddingStart="24dp"
            android:paddingTop="6dp"
            android:textColorHint="@color/gray"
            app:hintTextColor="@color/blue"
            tools:ignore="RtlSymmetry">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_productSP_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/manjorant_regular"
                android:hint="Selling price"
                android:inputType="number"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="19sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/Btn_addProduct_dialog"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/shop_onboard_signup_background"
                android:fontFamily="@font/criteria_singup"
                android:text="Add"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <ProgressBar
                android:id="@+id/progressBar_adding_newProduct_dialog"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="@color/blue"/>
        </FrameLayout>

    </LinearLayout>
</ScrollView>
