<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/criteria_cf_bold"
            android:text="Faktoe"
            android:textColor="@color/black"
            android:textSize="30sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <View
                android:layout_width="7dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shop_onboard_signup_background" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shop_onboard_toggle" />

        </LinearLayout>
    </RelativeLayout>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/mobile_otp"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/fragment_2_sign_in_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Verification"
        android:fontFamily="@font/criteria_cf_extrabold_regular"
        android:textSize="42sp"
        android:textColor="@color/black"
        android:layout_marginTop="16sp" />

    <TextView
        android:id="@+id/fragment_2_sign_in_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a 6-digit code send to your mobile number"
        android:fontFamily="@font/manjorant_regular"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:textSize="18sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/Otp1_EditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="53dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/manjorant_regular"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textSize="19sp"
            android:maxLength="1"
            android:inputType="number"/>

        <EditText
            android:id="@+id/Otp2_EditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="53dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/manjorant_regular"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textSize="19sp"
            android:maxLength="1"
            android:inputType="number"/>

        <EditText
            android:id="@+id/Otp3_EditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="53dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/manjorant_regular"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textSize="19sp"
            android:maxLength="1"
            android:inputType="number"/>

        <EditText
            android:id="@+id/Otp4_EditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="53dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/manjorant_regular"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textSize="19sp"
            android:maxLength="1"
            android:inputType="number"/>

        <EditText
            android:id="@+id/Otp5_EditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="53dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/manjorant_regular"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textSize="19sp"
            android:maxLength="1"
            android:inputType="number"/>

        <EditText
            android:id="@+id/Otp6_EditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="53dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/manjorant_regular"
            android:gravity="center"
            android:textSize="19sp"
            android:maxLength="1"
            android:inputType="number"/>


    </LinearLayout>

    <Button
        android:id="@+id/ResendOtpBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="@color/dark_gray"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Resend"
        android:enabled="false"
        android:layout_marginBottom="24dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:fontFamily="@font/criteria_singup"
        android:background="@drawable/shop_onboard_signin_background"
        android:layout_gravity="center_horizontal"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp">
        <Button
            android:id="@+id/ContinueBtn_SignIn_2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Continue"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:fontFamily="@font/criteria_singup"
            android:background="@drawable/shop_onboard_signup_background"
            android:layout_gravity="center_horizontal"
            />
        <ProgressBar
            android:id="@+id/progressBar_verifying_otp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/blue"/>
    </FrameLayout>

    <TextView
        android:id="@+id/TextViewChangeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrong Number ?"
        android:fontFamily="@font/manjorant_regular"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="16sp" />

</LinearLayout>