<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/criteria_cf_bold"
            android:text="Faktoe"
            android:textColor="@color/black"
            android:textSize="30sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shop_onboard_toggle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shop_onboard_toggle" />

            <View
                android:layout_width="7dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shop_onboard_signup_background" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shop_onboard_toggle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:background="@drawable/shop_onboard_toggle" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_3_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Information"
        android:fontFamily="@font/criteria_cf_extrabold_regular"
        android:textSize="42sp"
        android:textColor="@color/black"
        android:layout_marginTop="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give us some of the information about your shop/business"
        android:fontFamily="@font/manjorant_regular"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/gray"
        android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:fontFamily="@font/criteria_cf_bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:textSize="20sp"/>

            <View
                android:id="@+id/bottom_bar_category"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/shop_onboard_signup_background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="4dp">

            <CheckBox
                android:id="@+id/CheckBox_GeneralStore"
                android:theme="@style/custom_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manjorant_regular"
                android:padding="12dp"
                android:text="General Store"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes household goods and other daily purpose products."
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_Pharmaceutics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="12dp"
                android:theme="@style/custom_checkbox"
                android:text="Pharmaceutics"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes medicine and first aid products"
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_Entertainment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Entertainment"
                android:theme="@style/custom_checkbox"
                android:padding="12dp"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes movies, music, musical instruments, vedio games and toys"
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_Stationary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="16dp"
                android:theme="@style/custom_checkbox"
                android:text="Stationary/Bookstore"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes stationary items for school and office works and books"
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_HomeAppliances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:theme="@style/custom_checkbox"
                android:padding="12dp"
                android:text="Home Appliances"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes everyday use home, kitchen, crockery, tools or other appliances."
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_Grocery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:theme="@style/custom_checkbox"
                android:padding="12dp"
                android:text="Grocery"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes grocery or pet supplies"
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_Electronics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="12dp"
                android:theme="@style/custom_checkbox"
                android:text="Electronics"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes mobile phones, computers, software, microwave, washings machines and all other electronics."
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_HomeDecor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="12dp"
                android:theme="@style/custom_checkbox"
                android:text="Home Decor"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes furniture, curtains, tilings, show pieces etc "
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_PersonalCare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="12dp"
                android:theme="@style/custom_checkbox"
                android:text="Personal Care"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes beauty products, personal care appliances"
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_Clothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="12dp"
                android:theme="@style/custom_checkbox"
                android:text="Clothing"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes sub categories like men, women, children etc"
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_Footwear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="12dp"
                android:theme="@style/custom_checkbox"
                android:text="Footwear"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes sub categories like men, women, children etc"
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_Jewelry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="12dp"
                android:theme="@style/custom_checkbox"
                android:text="Jewelry"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes gold, silver, platinum and artificial jewelry"
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_Sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="12dp"
                android:theme="@style/custom_checkbox"
                android:text="Sports"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes sport items or sport clothing and footwear"
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_BabyCare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="12dp"
                android:theme="@style/custom_checkbox"
                android:text="Baby Care"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes baby care products and toys"
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>

            <CheckBox
                android:id="@+id/CheckBox_PetShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="12dp"
                android:theme="@style/custom_checkbox"
                android:text="Pet Shop"
                android:fontFamily="@font/manjorant_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="includes sub categories in birds, dogs, cats etc."
                android:fontFamily="@font/manjorant_regular"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timings"
                android:fontFamily="@font/criteria_cf_bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:textSize="20sp"/>

            <View
                android:id="@+id/bottom_bar_timings"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/shop_onboard_signup_background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            tools:ignore="RtlSymmetry">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/EditText_OpenTime_Layout"
                android:layout_width="0dp"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:paddingStart="24dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/edit_text_border"
                app:hintTextColor="@color/blue"
                android:textColorHint="@color/gray"
                tools:ignore="RtlSymmetry">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/EditText_OpenTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Opens at"
                    android:textSize="19sp"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textColor="@color/dark_gray"
                    android:fontFamily="@font/manjorant_regular"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/EditText_CloseTime_Layout"
                android:layout_width="0dp"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:paddingStart="24dp"
                android:background="@drawable/edit_text_border"
                app:hintTextColor="@color/blue"
                android:textColorHint="@color/gray"
                tools:ignore="RtlSymmetry">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/EditText_CloseTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Closes at"
                    android:textSize="19sp"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textColor="@color/dark_gray"
                    android:fontFamily="@font/manjorant_regular"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operating Days"
                android:fontFamily="@font/criteria_cf_bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:textSize="20sp"/>

            <View
                android:id="@+id/bottom_bar_operatingDays"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/shop_onboard_signup_background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <Button
                android:id="@+id/Button_Sunday"
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/days_unselected"
                android:text="S"
                android:textColor="@color/gray"
                android:fontFamily="@font/manjorant_regular"
                android:layout_marginEnd="12dp"
                />
            <Button
                android:id="@+id/Button_Monday"
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/days_unselected"
                android:text="M"
                android:textColor="@color/gray"
                android:fontFamily="@font/manjorant_regular"
                android:layout_marginEnd="12dp"/>
            <Button
                android:id="@+id/Button_Tuesday"
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/days_unselected"
                android:text="T"
                android:textColor="@color/gray"
                android:fontFamily="@font/manjorant_regular"
                android:layout_marginEnd="12dp"/>
            <Button
                android:id="@+id/Button_Wednesday"
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/days_unselected"
                android:text="W"
                android:textColor="@color/gray"
                android:fontFamily="@font/manjorant_regular"
                android:layout_marginEnd="12dp"/>
            <Button
                android:id="@+id/Button_Thursday"
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/days_unselected"
                android:text="T"
                android:textColor="@color/gray"
                android:fontFamily="@font/manjorant_regular"
                android:layout_marginEnd="12dp"/>
            <Button
                android:id="@+id/Button_Friday"
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/days_unselected"
                android:text="F"
                android:textColor="@color/gray"
                android:fontFamily="@font/manjorant_regular"
                android:layout_marginEnd="12dp"/>
            <Button
                android:id="@+id/Button_Saturday"
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/days_unselected"
                android:text="S"
                android:textColor="@color/gray"
                android:fontFamily="@font/manjorant_regular"
                android:layout_marginEnd="12dp"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EditText_AnnualTurnover_Layout"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:theme="@style/Theme.FAKTOESHOP_material"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:paddingTop="6dp"
            android:paddingStart="24dp"
            android:background="@drawable/edit_text_border"
            app:hintTextColor="@color/blue"
            android:textColorHint="@color/gray"
            tools:ignore="RtlSymmetry"
            >
            <AutoCompleteTextView
                android:id="@+id/EditText_AnnualTurnover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:hint="Annual Turnover"
                android:paddingBottom="8dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/manjorant_regular"
                android:background="#0fff"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EditText_NumberOfProducts_Layout"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:theme="@style/Theme.FAKTOESHOP_material"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:paddingTop="6dp"
            android:paddingStart="24dp"
            android:background="@drawable/edit_text_border"
            app:hintTextColor="@color/blue"
            android:textColorHint="@color/gray"
            tools:ignore="RtlSymmetry"
            >
            <AutoCompleteTextView
                android:id="@+id/EditText_NumberOfProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:hint="How many products do you sell?"
                android:paddingBottom="8dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/manjorant_regular"
                android:background="#0fff"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/ContinueBtn_SignUp_3"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:text="Continue"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:fontFamily="@font/criteria_singup"
            android:background="@drawable/shop_onboard_signup_background"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</ScrollView>