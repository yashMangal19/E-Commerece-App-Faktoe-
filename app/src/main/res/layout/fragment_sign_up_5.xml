<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/criteria_cf_bold"
            android:text="Faktoe"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <View
                android:layout_width="7dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shop_onboard_signup_background" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shop_onboard_toggle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shop_onboard_toggle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shop_onboard_toggle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:background="@drawable/shop_onboard_toggle" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_5_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank Account Details"
        android:fontFamily="@font/criteria_cf_extrabold_regular"
        android:textSize="42sp"
        android:textColor="@color/black"
        android:layout_marginTop="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your bank details to receive funds in your account."
        android:fontFamily="@font/manjorant_regular"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:textSize="18sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EditText_AccountHolderName_Layout"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingTop="6dp"
        android:paddingStart="24dp"
        android:background="@drawable/edit_text_border"
        app:hintTextColor="@color/blue"
        android:textColorHint="@color/gray"
        tools:ignore="RtlSymmetry">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EditText_AccountHolderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Account Holder Name"
            android:textSize="19sp"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/manjorant_regular"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EditText_AccountType_Layout"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingTop="6dp"
        android:paddingStart="24dp"
        android:background="@drawable/edit_text_border"
        app:hintTextColor="@color/blue"
        android:textColorHint="@color/gray"
        tools:ignore="RtlSymmetry">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EditText_AccountType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Account Type"
            android:textSize="19sp"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/manjorant_regular"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EditText_AccountNumber_Layout"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingTop="6dp"
        android:paddingStart="24dp"
        android:background="@drawable/edit_text_border"
        app:hintTextColor="@color/blue"
        android:textColorHint="@color/gray"
        tools:ignore="RtlSymmetry">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EditText_AccountNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Account Number"
            android:textSize="19sp"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/manjorant_regular"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EditText_IFSCCode_Layout"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingTop="6dp"
        android:paddingStart="24dp"
        android:background="@drawable/edit_text_border"
        app:hintTextColor="@color/blue"
        android:textColorHint="@color/gray"
        tools:ignore="RtlSymmetry">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EditText_IFSCCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="IFSC Code"
            android:textSize="19sp"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/manjorant_regular"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/ContinueBtn_SignUp_5"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:text="Continue"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:fontFamily="@font/criteria_singup"
            android:background="@drawable/shop_onboard_signup_background"
            android:layout_gravity="center_horizontal"
            />
        <ProgressBar
            android:id="@+id/progressBar_uploading_data"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/blue"/>
    </FrameLayout>

</LinearLayout>